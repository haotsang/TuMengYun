<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginHorizontal="@dimen/layout_margin_24dp"
        android:layout_marginVertical="@dimen/layout_margin_6dp"
        android:background="@drawable/shape_edittext"
        android:drawablePadding="4dp"
        android:hint="请输入用户名"
        android:inputType="textPersonName"
        android:paddingHorizontal="@dimen/layout_margin_16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/bg_color"
        app:drawableStartCompat="@drawable/ic_edit_account" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginHorizontal="@dimen/layout_margin_24dp"
        android:layout_marginVertical="@dimen/layout_margin_6dp"
        android:background="@drawable/shape_edittext"
        android:drawablePadding="4dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:paddingHorizontal="@dimen/layout_margin_16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/bg_color"
        app:drawableStartCompat="@drawable/ic_edit_password" />

    <EditText
        android:id="@+id/editTextTextPhone"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginHorizontal="@dimen/layout_margin_24dp"
        android:layout_marginVertical="@dimen/layout_margin_6dp"
        android:background="@drawable/shape_edittext"
        android:drawablePadding="4dp"
        android:hint="请输入手机号"
        android:inputType="number"
        android:paddingHorizontal="@dimen/layout_margin_16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/bg_color"
        app:drawableStartCompat="@drawable/ic_edit_phone" />


    <com.example.myapplication.view.MultiStatusButton
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/layout_margin_24dp"
        android:layout_marginVertical="@dimen/layout_margin_6dp"
        android:text="注册" />


</LinearLayout>