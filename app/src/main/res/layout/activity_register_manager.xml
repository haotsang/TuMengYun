<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:fitsSystemWindows="true"
    android:gravity="center|top"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="6dp"
        android:background="@drawable/shape_edittext"
        android:drawablePadding="4dp"
        android:hint="请输入用户名"
        android:inputType="textPersonName"
        android:paddingHorizontal="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/bg_color"
        app:drawableStartCompat="@drawable/ic_edit_account" />

    <com.example.myapplication.view.MultiStatusButton
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="6dp"
        android:text="管理员登录" />


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="86dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp"
        app:strokeColor="#37000000"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <EditText
                android:id="@+id/editTextTextPhone"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="6dp"
                android:background="@drawable/shape_edittext"
                android:drawablePadding="4dp"
                android:hint="请输入手机号"
                android:inputType="number"
                android:paddingHorizontal="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/bg_color"
                app:drawableStartCompat="@drawable/ic_edit_phone" />


            <com.example.myapplication.view.MultiStatusButton
                android:id="@+id/button_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="6dp"
                android:text="申请管理员" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>