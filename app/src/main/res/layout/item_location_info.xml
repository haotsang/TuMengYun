<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/layout_margin_24dp">

    <ImageView
        android:id="@+id/item_info_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="18dp"
        android:src="@drawable/ic_nav_admin" />

    <TextView
        android:id="@+id/item_info_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16sp" />

    <ImageView
        android:id="@+id/item_info_arrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="18dp"
        android:src="@drawable/ic_nav_right" />

</LinearLayout>
