<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="20dp">
    <TextView
        android:id="@+id/textViewSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#000000"/>
    <LinearLayout
        android:id="@+id/linerLayoutA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageViewA"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/exercises_a"/>
        <TextView
            android:id="@+id/textViewA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linerLayoutB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageViewB"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/exercises_b"/>
        <TextView
            android:id="@+id/textViewB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linerLayoutC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageViewC"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/exercises_c"/>
        <TextView
            android:id="@+id/textViewC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linerLayoutD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageViewD"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/exercises_d"/>
        <TextView
            android:id="@+id/textViewD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>