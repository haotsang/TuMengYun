<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

<!--    获取imsi用于判断双卡和换卡-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"  android:maxSdkVersion="29" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <meta-data
            android:name="android.max_aspect"
            android:value="2.5" />
        <!-- 适配刘海屏 -->
        <meta-data
            android:name="android.notch_support"
            android:value="true" />

        <activity
            android:name=".activity.Splash"
            android:theme="@style/Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.myapplication.activity.AfterServiceActivity" />
        <activity android:name="com.example.myapplication.activity.DetailsActivity" />
        <activity android:name="com.example.myapplication.activity.CangkuActivity" />
        <activity android:name="com.example.myapplication.activity.ErrorActivity" />
        <activity android:name="com.example.myapplication.activity.ScanActivity" />
        <activity android:name="com.example.myapplication.activity.RegisterActivity" />
        <activity android:name="com.example.myapplication.activity.ManagerActivity" />
        <activity android:name="com.example.myapplication.activity.LabelActivity" />
        <activity android:name="com.example.myapplication.activity.GroupActivity" />
        <activity android:name="com.example.myapplication.activity.IssueActivity" />
        <activity android:name="com.example.myapplication.activity.MineActivity" />
        <activity android:name="com.example.myapplication.activity.RegisterManagerActivity" />
        <activity android:name="com.example.myapplication.activity.StaffActivity" />
        <activity android:name="com.example.myapplication.activity.LabelTitleEditActivity" />
        <activity android:name="com.example.myapplication.activity.QuestionActivity" />
        <activity android:name="com.example.myapplication.activity.AdminActivity" />
        <activity android:name="com.example.myapplication.activity.LoginActivity" />

        <activity android:name="com.example.myapplication.activity.CrashActivity"
            android:theme="@style/NoTitle"
            android:exported="false"
            android:process=":crash"/>
        <activity android:name="com.example.myapplication.activity.MainActivity" />


        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>